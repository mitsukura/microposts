<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><%= link_to "following", followings_user_path(@user.id) %><br>
      <%= link_to "follower", followers_user_path(@user.id) %></p>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
<!-- 追加箇所開始 -->
<%= paginate @microposts, outer_window: 4 %>
<!-- 追加箇所終了 -->